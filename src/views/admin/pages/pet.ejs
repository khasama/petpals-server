<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- slide trái -->
        <%- include('../partials/left') %>
            <!-- End slide trái -->

            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">

                <!-- Main Content -->
                <div id="content">

                    <!-- Top bar -->
                    <%- include('../partials/top') %>
                        <!-- End of Top bar -->

                        <!-- Begin Page Content -->
                        <div class="container-fluid" style="margin-top: 20px;">

                            <!-- DataTales Example -->
                            <div class="card shadow mb-4">
                                <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-primary" style="display: inline;">Anime
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                            <thead>
                                                <tr>
                                                    <th>Name</th>
                                                    <th>AKA</th>
                                                    <th>Status</th>
                                                    <th style="width: 25%;">
                                                        <a href="javascript:void(0)" data-toggle="modal"
                                                            data-target="#newMovieModal">
                                                            New
                                                        </a>
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% anime.forEach(movie=> { %>
                                                    <tr>
                                                        <td>
                                                            <%- movie.name %>
                                                        </td>
                                                        <td>
                                                            <%- movie.aka %>
                                                        </td>
                                                        <td>
                                                            <%- movie.status %>
                                                        </td>
                                                        <td>
                                                            <a href="javascript:void(0)" data-id="<%- movie._id %>"
                                                                class="btn btn-primary"
                                                                onclick="getInforMovie(this)">Edit</a>
                                                            <a href="/episode/movie-<%- movie._id %>"
                                                                class="btn btn-secondary">Episodes</a>
                                                            <a href="javascript:void(0)" class="btn btn-danger"
                                                                data-id="<%- movie._id %>"
                                                                onclick="deleteMovie(this)">Delete</a>
                                                        </td>
                                                    </tr>
                                                    <% }); %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>

                            <div class="modal fade" id="newMovieModal" tabindex="-1" role="dialog" aria-hidden="true">
                                <div class="modal-dialog" style="max-width: 40%;">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">NEW MOVIE</h5>
                                            <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">×</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="form-group">
                                                <label for="name">Name:</label>
                                                <input type="text" class="form-control" id="addName" autocomplete="off">
                                            </div>
                                            <div class="form-group">
                                                <label for="oname">AKA:</label>
                                                <input type="text" class="form-control" id="addAka" autocomplete="off">
                                            </div>
                                            <div class="form-group">
                                                <label for="Thumbnail">Thumbnail:</label>
                                                <input type="file" class="form-control" id="addThumb" accept="image/*">
                                            </div>
                                            <div class="form-group">
                                                <label for="Background">Background:</label>
                                                <input type="file" class="form-control" id="addBackground"
                                                    accept="image/*">
                                            </div>
                                            <input type="hidden" id="type" value="anime">
                                            <button id="newMovie" class="btn btn-primary">Create</button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="modal fade" id="updateMovieModal" tabindex="-1" role="dialog"
                                aria-hidden="true">
                                <div class="modal-dialog" style="max-width: 40%;">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">UPDATE MOVIE</h5>
                                            <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">×</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <div>
                                                <div class="form-group">
                                                    <label for="name">Name:</label>
                                                    <input type="text" class="form-control" id="updateName"
                                                        autocomplete="off">
                                                </div>
                                                <div class="form-group">
                                                    <label for="Slug">Slug:</label>
                                                    <input type="text" class="form-control" id="updateSlug" disabled>
                                                </div>
                                                <div class="form-group">
                                                    <label for="oname">AKA:</label>
                                                    <input type="text" class="form-control" id="updateAka"
                                                        autocomplete="off">
                                                </div>
                                                <div class="form-group d-flex">
                                                    <label for="category" style="line-height: 30px;">Status:</label>
                                                    <select id="updateStatus" class="w-50 form-control ml-2">
                                                        <option value="Hoàn thành"> Hoàn thành </option>
                                                        <option value="Đang tiến hành">
                                                            Đang tiến hành
                                                        </option>
                                                    </select>
                                                </div>
                                                <div class="form-group">
                                                    <label for="Thumbnail">Thumbnail:</label>
                                                    <input type="file" class="form-control" id="updateThumb"
                                                        accept="image/*">
                                                    <img src="" alt="" id="current-thumb" class="mt-2" width="200">
                                                </div>
                                                <div class="form-group">
                                                    <label for="Background">Background:</label>
                                                    <input type="file" class="form-control" id="updateBackground"
                                                        accept="image/*">
                                                    <img src="" alt="" id="current-background" class="mt-2" width="300">
                                                </div>

                                                <input type="hidden" id="idMovie">
                                                <button id="updateMovie" class="btn btn-primary">Save</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <!-- -->

                </div>
                <!-- End of Main Content -->

                <!-- Footer -->
                <%- include('../partials/footer') %>
                    <!-- End of Footer -->

            </div>
            <!-- End of Content Wrapper -->

    </div>
    <div id="alert-area" class="position-absolute" style="top: 20px; right: 20px;"></div>
    <!-- End of Page Wrapper -->

    <%- include('../partials/bot') %>

</body>

</html>